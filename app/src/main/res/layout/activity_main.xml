<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.who.tracker.gpstracker.MainActivity">


    <TextView
        android:text="GSM Tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_title"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MCC Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_mcc"
        android:layout_below="@+id/main_tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="MNC Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_mnc"
        android:layout_below="@+id/main_input_mcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Locate!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_input_cid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/main_btn_locate" />

    <TextView
        android:text="LAC in Decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_lac"
        android:layout_above="@+id/main_input_mcc"
        android:layout_alignLeft="@+id/main_btn_locate"
        android:layout_alignStart="@+id/main_btn_locate"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_input_cid"
        android:inputType="number"
        android:hint="Tap to edit"
        android:layout_below="@+id/main_tv_cid"
        android:layout_alignRight="@+id/main_tv_lac"
        android:layout_alignEnd="@+id/main_tv_lac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/main_input_mnc"
        android:inputType="number"
        android:hint="Telkomsel - 10"
        android:layout_below="@+id/main_tv_mnc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_input_lac"
        android:inputType="number"
        android:hint="Tap to edit"
        android:layout_below="@+id/main_tv_mcc"
        android:layout_alignRight="@+id/main_tv_lac"
        android:layout_alignEnd="@+id/main_tv_lac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="510"
        android:id="@+id/main_input_mcc"
        android:inputType="number"
        android:hint="Indonesia - 510"
        android:layout_below="@+id/main_tv_mcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CID in Decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_cid"
        android:layout_above="@+id/main_input_mnc"
        android:layout_alignLeft="@+id/main_tv_lac"
        android:layout_alignStart="@+id/main_tv_lac" />


</RelativeLayout>
